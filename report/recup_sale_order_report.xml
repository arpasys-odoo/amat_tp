<t t-name="sale.report_saleorder_document">
    <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
        <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
        
        <t t-if="doc.partner_shipping_id == doc.partner_invoice_id                              and doc.partner_invoice_id != doc.partner_id                              or doc.partner_shipping_id != doc.partner_invoice_id">
            <t t-set="information_block">
                <strong>
                    <t t-if="doc.partner_shipping_id == doc.partner_invoice_id">
                        Invoicing and Shipping Address:
                    </t>
                    <t t-else="">
                        Invoicing Address:
                    </t>
                </strong>
                <div t-field="doc.partner_invoice_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                    <strong>Shipping Address:</strong>
                    <div t-field="doc.partner_shipping_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                </t>
            </t>
        </t>
        <div class="page">
            <div class="oe_structure"/>

           <!--  <h2 class="mt-4">
                <span t-if="env.context.get('proforma', False) or is_pro_forma">Pro-Forma Invoice # </span>
                <span t-elif="doc.state in ['draft','sent']">Quotation # </span>
                <span t-else="">Bon de livraison # </span>
                <span t-field="doc.name"/>
            </h2> -->
            <!-- <table class="table table-sm o_main_table mt-4">
              <thead style="display: table-row-group">
                <tr>
                  <th style="background-color: #ffc080; border: 2px solid #ff8000" class="text-start">Numéro</th>
                  <th style="background-color: #ffc080; border: 2px solid #ff8000" class="text-start">Date</th>
                  <th style="background-color: #ffc080; border: 2px solid #ff8000" class="text-start">Date de validité</th>
                  <th style="background-color: #ffc080; border: 2px solid #ff8000" class="text-start">Mode de règlement</th>
                </tr>
              </thead>
              <tbody>
                <td style="border: 1px solid #ff8000; border-top: 2px solid #ff8000"><span t-field="doc.name"/></td>
                <td style="border: 1px solid #ff8000; border-top: 2px solid #ff8000"><span t-options="{&quot;format&quot;: &quot;dd/MM/yyyy&quot;}" t-field="doc.date_order"/></td>
                <td style="border: 1px solid #ff8000; border-top: 2px solid #ff8000"><span t-options="{&quot;format&quot;: &quot;dd/MM/yyyy&quot;}" t-field="doc.validity_date"/></td>
                <td style="border: 1px solid #ff8000; border-top: 2px solid #ff8000"><span t-field="doc.payment_term_id"/></td>
              </tbody>
            </table> -->
            
              <div style="display: -webkit-box;">
                <div style="border: 1px solid; border-radius: 20px; width: 50%;">
                  <div style="text-align: center; padding: 0px 10px 0px 10px; display: -webkit-box;">
                      <div style="width: 60%; border-right: 1px solid; padding: 16px 0px 5px 0px;">
                        <h1 style="color: black !important; font-size: 22px !important;">Bon de livraison</h1>
                      </div>
                      <div style="width: 40%; padding: 5px 0px 5px 0px;">
                        <strong style="color: black !important;">Numéro</strong>
                        <div>
                          <span t-field="doc.name"/>
                        </div>
                      </div>
                  </div>
    
                  <div style="display: -webkit-box; border-top: 1px solid; border-bottom: 1px solid;">
                      <div style="padding: 5px 10px 5px 10px;">
                          <strong style="color: black !important;">Date :</strong>
                      </div>
                      <div style="padding: 5px 10px 5px 10px;">
                          <span t-field="doc.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                      </div>
                  </div>
      
                  <div style="border-bottom: 1px solid; display: -webkit-box;">
                    
                      <div style="width: 40%; text-align: center;">
                        <div style="padding: 5px 10px 5px 10px;">
                            <strong style="color: black !important;">Code client</strong>
                        </div>
                        <div style="border-top: 1px solid; padding: 5px 10px 5px 10px;">
                            <!-- <span t-field="doc.partner_id.mobile"/> -->
                        </div>
                      </div>
                    
                      <div style="border-left: 1px solid; width: 60%; text-align: center;">
                        <div style="padding: 5px 10px 5px 10px;">
                            <strong style="color: black !important;">Mode de règlement</strong>
                        </div>
                        <div style="border-top: 1px solid; padding: 5px 10px 5px 10px; text-align: center;">
                            <!-- <span t-field="doc.partner_id.email"/> -->
                        </div>
                      </div>
                    
                  </div>
                  <div style="display: -webkit-box;">
                      <div style="padding: 5px 10px 5px 10px;">
                          <strong style="color: black !important;">N° de TVA Intracom :</strong>
                      </div>
                      <div style="padding: 5px 10px 5px 10px;">
                          <!-- <span t-field="doc.user_id.name"/> -->
                      </div>
                  </div>
                </div>
                
                <div style="margin-left: 10%;">
                    <span t-field="doc.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                </div>
              </div>

            <div class="row mt-4 mb-4" id="informations">
                <div class="" name="informations_reference" style="width: 48%">
                    <p t-if="doc.client_order_ref" class="m-0">Référence client: <span t-field="doc.client_order_ref"/></p>
                    
                </div>
               
                <div t-if="doc.date_order" class="col-auto col-0 mw-100 mb-2" name="informations_date">
                 <!--   <strong t-if="doc.state in ['draft', 'sent']">Quotation Date:</strong>
                    <strong t-else="">Order Date:</strong>
                    <p class="m-0" t-field="doc.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>  -->
                </div>
                <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto col-0 mw-100 mb-2" name="expiration_date">
                  <!--  <strong>Expiration:</strong>
                    <p class="m-0" t-field="doc.validity_date"/> -->
                </div>
                <div t-if="doc.user_id.name" class="col-auto col-0 mw-100 mb-2">
                  <!--  <strong>Salesperson:</strong>
                    <p class="m-0" t-field="doc.user_id"/> -->
                </div>
            </div>

            <!-- Is there a discount on at least one line? -->
            <t t-set="lines_to_report" t-value="doc._get_order_lines_to_report()"/>
            <t t-set="display_discount" t-value="any(l.discount for l in lines_to_report)"/>

            <table class="table table-sm o_main_table mt-4">
                <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                <thead style="display: table-row-group">
                    <tr>
                        <th style="background-color: #C7C7C7; border: 1px solid #ACACAC" name="th_description" class="text-start">Description</th>
                        <th style="background-color: #C7C7C7; border: 1px solid #ACACAC" name="th_quantity" class="text-end">Qté</th>
                        <th style="background-color: #C7C7C7; border: 1px solid #ACACAC" name="th_priceunit" class="text-end">P.U HT</th>
                        <th style="background-color: #C7C7C7; border: 1px solid #ACACAC" name="th_discount" t-if="display_discount" class="text-end" groups="product.group_discount_per_so_line">
                            <span>Disc.%</span>
                        </th>
                        <th style="background-color: #C7C7C7; border: 1px solid #ACACAC" name="th_subtotal" class="text-end">
                            <span groups="account.group_show_line_subtotals_tax_excluded">Montant HT</span>
                            <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                        </th>
                        <th style="background-color: #C7C7C7; border: 1px solid #ACACAC" name="th_taxes" class="text-end">TVA</th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-foreach="lines_to_report" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'fw-bold' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td style="border: 1px solid #ACACAC; border-top: 2px solid #ACACAC" name="td_name"><span t-field="line.name"/></td>
                                <td style="border: 1px solid #ACACAC; border-top: 2px solid #ACACAC" name="td_quantity" class="text-end">
                                    <span t-field="line.product_uom_qty"/>
                                    <span t-field="line.product_uom"/>
                                </td>
                                <td style="border: 1px solid #ACACAC; border-top: 2px solid #ACACAC" name="td_priceunit" class="text-end">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td style="border: 1px solid #ACACAC; border-top: 2px solid #ACACAC" t-if="display_discount" class="text-end" groups="product.group_discount_per_so_line">
                                    <span t-field="line.discount"/>
                                </td>
                                <td style="border: 1px solid #ACACAC; border-top: 2px solid #ACACAC" t-if="not line.is_downpayment" name="td_subtotal" class="text-end o_price_total">
                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                </td>
                                <td style="border: 1px solid #ACACAC; border-top: 2px solid #ACACAC" name="td_taxes" class="text-end">
                                    <span t-out="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                </td>
                            </t>
                            <t t-elif="line.display_type == 'line_section'">
                                <td name="td_section_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-elif="line.display_type == 'line_note'">
                                <td name="td_note_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section') and not line.is_downpayment">
                            <tr class="is-subtotal text-end">
                                <td name="td_section_subtotal" colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span t-out="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
                                    <div>
                          <!-- <p style="font-size: 11px;">Devis gratuit. Les prix TTC sont établis sur la base des taux de TVA en vigueur à la date de remise de l'offre. Toute variation de ces taux sera répercutée sur
les prix.</p> -->
                        </div>
            <div name="so_total_summary">
              <div style="font-size: 12px; padding-top: 20px; float: left; width: 35%;">
                <p style="line-height: 0px; font-weight: bold; text-decoration: underline; font-size: 14px;">Coordonnées bancaires société :</p>
                <p style="line-height: 0px;">Banque : BNP</p>
                <p style="line-height: 0px;">RIB : 30004010430001011254514</p>
                <p style="line-height: 0px;">IBAN : FR7630004010430001011254514</p>
                <p style="line-height: 0px;">BIC : BNPAFRPPXXX</p>
              </div>
                <div id="total" class="row" name="total">
                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                        <table class="table table-sm" style="border: 2px solid #ACACAC">
                            <!-- Tax totals -->
                            <t t-set="tax_totals" t-value="doc.tax_totals"/>
                            <t t-call="account.document_tax_totals"/>
                        </table>
                    </div>
                </div>
            </div>

            <div t-if="doc.signature" class="mt-4 ml64 mr4" name="signature">
                <div class="offset-8">
                    <strong>Signature</strong>
                </div>
                <div class="offset-8">
                    <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                </div>
                <div class="offset-8 text-center">
                    <p t-field="doc.signed_by"/>
                </div>
            </div>
            <div>
                <p t-field="doc.note" name="order_note"/>
                <p t-if="not is_html_empty(doc.payment_term_id.note)">
                    <span t-field="doc.payment_term_id.note"/>
                </p>
                <p t-if="doc.fiscal_position_id and not is_html_empty(doc.fiscal_position_id.sudo().note)" id="fiscal_position_remark">
                    <strong>Fiscal Position Remark:</strong>
                    <span t-field="doc.fiscal_position_id.sudo().note"/>
                </p>
            </div>
        </div>
    </t>
</t>