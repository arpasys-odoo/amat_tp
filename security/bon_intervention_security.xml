<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <!-- Category of the module -->
        <record id="module_bon_intervention_security" model="ir.module.category">
            <field name="name">AMAT TP</field>
            <field name="description">Droits de AMAT TP</field>
        </record>

        <!-- Group for users -->
        <record id="amat_tp_group_user" model="res.groups">
            <field name="name">Utilisateur</field>
            <field name="category_id" ref="module_bon_intervention_security"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Group for managers -->
        <record id="amat_tp_group_manager" model="res.groups">
            <field name="name">Administrateur</field>
            <field name="category_id" ref="module_bon_intervention_security"/>
            <field name="implied_ids" eval="[(4, ref('amat_tp_group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
